# Start the Django server
python manage.py runserver &
DJANGO_PID=$!

# Start React frontend
echo "Starting React frontend..."
cd Poly-Agent_frontend
npm start &
REACT_PID=$!

# Save PIDs to a file for the stop script
echo $DJANGO_PID > ../.django.pid
echo $REACT_PID > ../.react.pid

echo "Both servers are starting..."
echo "Django backend will be available at http://localhost:8000"
echo "React frontend will be available at http://localhost:3000"
echo "Use ./stop to stop both servers"

# Wait for both processes
wait 